<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </androidx.recyclerview.widget.RecyclerView>

    <include layout="@layout/main_layout_toolbar"/>

    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="bottom"
        android:background="#ca2f17"
        android:elevation="5dp"
        android:orientation="horizontal"
        app:layout_behavior="@string/main_bottom_view_behavior">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="底部可自定义放置任何View"
            android:textColor="@android:color/white"/>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="75dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="#FFFFFF"
        android:clickable="true"
        app:borderWidth="0dp"
        app:elevation="4dp"
        app:fabSize="auto"
        app:layout_anchor="@id/rv"
        app:layout_anchorGravity="bottom|end"
        app:layout_behavior="@string/main_fab_vertical_behavior"
        app:srcCompat="@drawable/icon_fab_mode"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab2_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="75dp"
        android:layout_marginLeft="20dp"
        android:backgroundTint="#FFFFFF"
        android:clickable="true"
        app:borderWidth="0dp"
        app:elevation="6dp"
        app:fabSize="auto"
        app:layout_anchor="@id/rv"
        app:layout_anchorGravity="bottom|start"
        app:layout_behavior="@string/main_fab_vertical_behavior"
        app:srcCompat="@drawable/icon_fab_mode"/>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab3_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:backgroundTint="#FFFFFF"
        android:clickable="true"
        app:borderWidth="0dp"
        app:elevation="6dp"
        app:fabSize="auto"
        app:layout_anchor="@id/rv"
        app:layout_anchorGravity="top|start"
        app:layout_behavior="@string/main_fab_scale_behavior"
        app:srcCompat="@drawable/icon_fab_mode"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab4_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="#FFFFFF"
        android:clickable="true"
        app:borderWidth="0dp"
        app:elevation="6dp"
        app:fabSize="auto"
        app:layout_anchor="@id/rv"
        app:layout_anchorGravity="top|end"
        app:layout_behavior="@string/main_fab_scale_behavior"
        app:srcCompat="@drawable/icon_fab_mode"/>


</androidx.coordinatorlayout.widget.CoordinatorLayout>


