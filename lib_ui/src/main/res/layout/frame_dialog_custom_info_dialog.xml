<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_16"
    app:cardCornerRadius="@dimen/dp_12">

    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="@dimen/dp_280"
        android:layout_height="wrap_content"
        android:background="@color/frame_pay_white"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="@string/frame_title_tips"/>

        <TextView
            android:id="@+id/contentTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_14"
            android:textSize="@dimen/sp_16"
            android:textColor="#3f3f3f"
            android:layout_gravity="center_horizontal"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/frame_dlg_divider_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_16"
                android:gravity="center"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/frame_custom_layout_selector"
                android:text="@string/frame_btn_confirm"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
